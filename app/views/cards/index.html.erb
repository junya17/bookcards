<h1>Cards#index</h1>
<p>Find me in app/views/cards/index.html.erb</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>題名</th>
            <th>著者</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <% @book.each do | book | %>
        <tbody>
            <tr>
                <td>
                    <%= book.id %>
                </td>
                <td>
                    <a href="/cards/<%=book.id%>">
                        <%= book.title %>
                    </a>
                </td>
                <td>
                    <% book.author%>
                </td>
                <td>
                    <a href="/cards/edit/<%= book.id %>">編集</a>
                </td>
                <td>
                    <a href="javascript:window.delData(
                    <%= (book.id.to_s + " , '".to_s + book.title.to_s).html_safe %>'); ">削除</a>
                </td>
            </tr>
        <%end%>
    </tbody>

</table>
<p class="link "><a href="/cards/add ">※新しいデータを入力　&gt;&gt;</a></p>