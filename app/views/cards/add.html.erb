<div class="container">

    <h1>新規登録</h1>

    <table class="table table-borderless">
        <%= form_for(@book, url:{controller:'cards', action:'add'}) do | form | %>
            <div class="form-group">
                <tr>
                    <th>題名</th>
                    <td>
                        <%= form.text_field :title, :class=>"form-control" %>
                    </td>
                </tr>
            </div>
            <div class="form-group">
                <tr>
                    <th>著者</th>
                    <td>
                        <%= form.text_field :author, :class=>"form-control"%>
                    </td>
                </tr>
            </div>
            <div class="form-group">
                <tr>
                    <th>価格</th>
                    <td>
                        <%= form.number_field :price,  :class=>"form-control" %>
                    </td>
                </tr>
            </div>
            <div class="form-group">
                <tr>
                    <th>出版社</th>
                    <td>
                        <%= form.text_field :publisher,  :class=>"form-control"%>
                    </td>
                </tr>
            </div>
            <div class="form-check">
                <tr>
                    <th>評価</th>
                    <td>
                        <label>
                            <%=form.radio_button :evaluation, '1'%>1</label>
                        <label>
                            <%=form.radio_button :evaluation, '2'%>2</label>
                        <label>
                            <%=form.radio_button :evaluation, '3'%>3</label>
                        <label>
                            <%=form.radio_button :evaluation, '4'%>4</label>
                        <label>
                            <%=form.radio_button :evaluation, '5'%>5</label>

                    </td>
                </tr>
            </div>
            <div class="form-group">
                <tr>
                    <th>レビュー</th>
                    <td>
                        <%= form.text_field :review , :class=>"form-control"%>
                    </td>
                </tr>
            </div>
            <div class="form-group">
                <tr>
                    <th></th>
                    <td>
                        <%= form.submit "保存", :class=>"btn btn-primary"%>
                    </td>
                </tr>
            </div>
            <%end%>
    </table>
    
</div>